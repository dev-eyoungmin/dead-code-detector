{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "pnpm watch",
      "isBackground": true,
      "group": "build",
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
